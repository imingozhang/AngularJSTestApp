@{
    ViewData["Title"] = "Match Test";
}
<h1>@ViewData["Title"]</h1>

<script src="~/js/app.js"></script>

<div ng-app="myModule">
    <div ng-controller="myController">
        <div class="container">
            <div>Please enter a string(Input Text)</div>
            <div class="row">
                <input type="text" style="width:400px;" ng-model="reqdata.text" />
            </div>
            <div>Please enter a string for searching (Subtext)</div>
            <div class="row">
                <input type="text" style="width:400px;" ng-model="reqdata.subText" />
            </div>
            <div class="row" style="padding-top:20px;"></div>
            <div class="row">
                Input Text: {{ reqdata.text }}
            </div>
            <div class="row">
                Subtext: {{ reqdata.subText }}
            </div>
        </div>
        <!----- SUBMIT BUTTON ------>
        <div> </div>
        <button id="submit_btn" class="btn btn-primary" ng-click="checkString()">Check</button>
        <div class="row"  style="padding-top:30px;"> </div>
        <!----- SUCCESS / ERROR MESSAGE ------>
        <div class="container">

            <div class="row">
                Message: {{ output_msg }}
            </div>
            <div class="row">
                Found: {{ output.found }}
            </div>
            <div class="row">
                Positions at (start from zero): {{ output.positions }}
            </div>

        </div>
    </div>

</div>